{
  "compilerOptions": {
    "target": "es2016",                          
    "module": "commonjs",                    
    "lib": ["es5"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
